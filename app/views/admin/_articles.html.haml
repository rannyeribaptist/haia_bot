#filterrific_results
  - if not article.empty?
    .row
      .col-lg-4
        .card
          .card-header
            = Legislation.where(id: article.first.legislation_id).first.name
          .card-body            
            = article.first.content.gsub(/\n/, '<br>').html_safe
          .card-footer{style: "text-align:center"}
            = link_to fa_icon('eye', text: 'Ver', color: "#000"), article_path(article.first.number), style: "color:#000", class: "pull-left"
            = link_to fa_icon('pencil', text: 'Editar', color: "#000"), edit_article_path(article.first), style: "color:#000"
            = link_to fa_icon('trash', text: 'Excluir', color: "#000"), article.first, method: :delete, data: { confirm: 'Tem certeza?' }, style: "color:#000", class: "pull-right"