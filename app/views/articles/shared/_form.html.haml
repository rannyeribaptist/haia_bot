= simple_form_for @article do |f|
  - if @article.errors.any?
    #error_explanation
      %h2= "#{pluralize(@article.errors.count, "error")} prohibited this article from being saved:"
      %ul
        - @article.errors.full_messages.each do |message|
          %li= message
  
  = f.input :legislation, label: "Legislação", as: :select, collection: Legislation.all
  = f.input :content, label: "Conteúdo dos artigos"
  = f.submit 'Enviar', class: "btn btn-success"
