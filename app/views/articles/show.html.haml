.container-fluid
  %p#notice= notice

  %p
    %strong Lei:
    = @article.content.gsub(/\n/, '<br>').html_safe
  %p
    %strong Legislation:
    = Legislation.find_by_id(@article.legislation).name
  
  %hr

  %h3 Comments
  - @article.comments.each do |comment|
    = @comment

  = link_to 'Edit', edit_article_path(@article)
  \|
  = link_to 'Back', articles_path
