.container-fluid{style: "display:inline"}
  .row
    .col-lg-3
      .article
        %h3.panel-title= Legislation.where(id: @article.legislation_id).first.name
        %hr/
        = @article.content.gsub(/\n/, '<br>').html_safe
  
    - @article.comments.each_with_index do |c, i|
      .col-lg-3
        .article
          %h3.panel-title= @authors[i]
          %hr/
          = (@comments[i]).html_safe
